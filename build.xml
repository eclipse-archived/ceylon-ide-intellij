<?xml version="1.0" encoding="UTF-8"?>
<project name="ceylon-ide-intellij" default="help" basedir="." xmlns:if="ant:if">

    <tstamp>
        <format property="NOW" pattern="yyyyMMddHHmm" />
    </tstamp>

    <property file="${basedir}/plugin-ceylon-code/build.properties"/>
    <property name="projects.base.dir" value="${basedir}/.." />
    <property name="build.dir" value="${basedir}/ant-build" />
    <property name="ceylon.repo.dir" value="${projects.base.dir}/ceylon/dist/dist/repo"/>

    <target name="help">
        <echo>Options for building the Ceylon IDE plugins:
    ant clean              - Cleans the build environment
    ant build              - Builds Ceylon IDE for IntelliJ
        </echo>
    </target>

    <path id="ceylon.runtime">
        <pathelement path="${ceylon.repo.dir}/org/tautua/markdownpapers/core/1.2.7/org.tautua.markdownpapers.core-1.2.7.jar" />
        <pathelement path="${ceylon.repo.dir}/org/antlr/stringtemplate/3.2.1/org.antlr.stringtemplate-3.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/org/jboss/logmanager/1.4.0.Final/org.jboss.logmanager-1.4.0.Final.jar" />
        <pathelement path="${ceylon.repo.dir}/org/antlr/antlr/2.7.7/org.antlr.antlr-2.7.7.jar" />
        <pathelement path="${ceylon.repo.dir}/org/apache/httpcomponents/httpcore/4.3.2/org.apache.httpcomponents.httpcore-4.3.2.jar" />
        <pathelement path="${ceylon.repo.dir}/org/jboss/modules/1.3.3.Final/org.jboss.modules-1.3.3.Final.jar" />
        <pathelement path="${ceylon.repo.dir}/org/antlr/runtime/3.4/org.antlr.runtime-3.4.jar" />
        <pathelement path="${ceylon.repo.dir}/org/apache/commons/codec/1.8/org.apache.commons.codec-1.8.jar" />
        <pathelement path="${ceylon.repo.dir}/org/jboss/jandex/1.0.3.Final/org.jboss.jandex-1.0.3.Final.jar" />
        <pathelement path="${ceylon.repo.dir}/net/minidev/json-smart/1.1.1/net.minidev.json-smart-1.1.1.jar" />
        <pathelement path="${ceylon.repo.dir}/org/apache/httpcomponents/httpclient/4.3.2/org.apache.httpcomponents.httpclient-4.3.2.jar" />
        <pathelement path="${ceylon.repo.dir}/org/apache/commons/logging/1.1.1/org.apache.commons.logging-1.1.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/github/rjeschke/txtmark/0.13/com.github.rjeschke.txtmark-0.13.jar" />
        <pathelement path="${ceylon.repo.dir}/com/github/lookfirst/sardine/5.1/com.github.lookfirst.sardine-5.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/maven-support/2.0/com.redhat.ceylon.maven-support-2.0.jar" />

        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/common/1.2.1/com.redhat.ceylon.common-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/compiler/js/1.2.1/com.redhat.ceylon.compiler.js-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/compiler/java/1.2.1/com.redhat.ceylon.compiler.java-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/module-resolver/1.2.1/com.redhat.ceylon.module-resolver-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/typechecker/1.2.1/com.redhat.ceylon.typechecker-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/ceylon/runtime/1.2.1/ceylon.runtime-1.2.1.jar" />
        <pathelement path="${ceylon.repo.dir}/ceylon/language/1.2.1/ceylon.language-1.2.1.car" />
        <pathelement path="${ceylon.repo.dir}/com/redhat/ceylon/model/1.2.1/com.redhat.ceylon.model-1.2.1.jar" />

        <pathelement path="${projects.base.dir}/ceylon-dist/dist/lib/ceylon-bootstrap.jar" />
    </path>

    <path id="compile.runtime.classpath">
        <path refid="ceylon.runtime"/>
        <fileset dir="${ideaRoot}/lib" includes="**/*.jar"/>
    </path>

    <path id="compile.ide.classpath">
        <path refid="compile.runtime.classpath"/>

        <pathelement path="${build.dir}/runtime"/>

        <path refid="dist.classpath"/>
    </path>

    <path id="dist.classpath">
        <pathelement path="${basedir}/plugin-ceylon-code/modules/org/intellij/plugins/ceylon/ide/ceylonCode/1.2.0/org.intellij.plugins.ceylon.ide.ceylonCode-1.2.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-ide-common/modules/com/redhat/ceylon/ide/common/1.2.1/com.redhat.ceylon.ide.common-1.2.1.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/collection/1.2.1/ceylon.collection-1.2.1.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/interop/java/1.2.1/ceylon.interop.java-1.2.1.car" />
        <pathelement path="${projects.base.dir}/ceylon.tool.converter.java2ceylon/modules/ceylon/tool/converter/java2ceylon/1.2.1/ceylon.tool.converter.java2ceylon-1.2.1.car" />
        <pathelement path="${projects.base.dir}/ceylon.tool.converter.java2ceylon/repo/org/antlr/antlr4-runtime-osgi/4.5.1/org.antlr.antlr4-runtime-osgi-4.5.1.jar" />
    </path>

    <target name="build-runtime">
        <mkdir dir="${build.dir}/CeylonRuntime/lib"/>
        <mkdir dir="${build.dir}/runtime"/>
        <javac srcdir="${basedir}/CeylonRuntime/src"
               destdir="${build.dir}/runtime"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.runtime.classpath">
        </javac>
        <copy todir="${build.dir}/runtime">
            <fileset dir="${basedir}/CeylonRuntime/src" includes="META-INF/**"/>
        </copy>
        <jar destfile="${build.dir}/CeylonRuntime/lib/CeylonRuntime.jar"
             basedir="${build.dir}/runtime"/>
        <copy todir="${build.dir}/CeylonRuntime/lib" flatten="true">
            <path refid="ceylon.runtime"/>
        </copy>
        <zip destfile="${basedir}/out/installation-packages/CeylonRuntime.zip"
             basedir="${build.dir}" includes="CeylonRuntime/**"/>
    </target>

    <target name="build-ide">
        <mkdir dir="${build.dir}/CeylonIDEA/classes"/>
        <mkdir dir="${build.dir}/CeylonIDEA/lib"/>
        <javac srcdir="${basedir}/compiler/src"
               destdir="${build.dir}/CeylonIDEA/classes"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.ide.classpath">
        </javac>
        <javac srcdir="${basedir}/jps-plugin/src"
               destdir="${build.dir}/CeylonIDEA/classes"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.ide.classpath">
        </javac>
        <copy todir="${build.dir}/CeylonIDEA/classes">
            <fileset dir="${basedir}/jps-plugin/src" includes="META-INF/**"/>
        </copy>
        <javac srcdir="${basedir}/src"
               destdir="${build.dir}/CeylonIDEA/classes"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.ide.classpath">
        </javac>
        <copy todir="${build.dir}/CeylonIDEA/classes">
            <fileset dir="${basedir}/resources"/>
        </copy>
        <copy todir="${build.dir}/CeylonIDEA/classes">
            <fileset dir="${projects.base.dir}/ceylon-dist/dist" includes="repo/**"/>
        </copy>

        <copy todir="${build.dir}/CeylonIDEA">
            <fileset dir="${basedir}" includes="META-INF/**"/>
        </copy>
        <copy todir="${build.dir}/CeylonIDEA/lib" flatten="true">
           <path refid="dist.classpath"/>
        </copy>

        <!-- somehow this .car is not loaded unless it is renamed to .jar :/ -->
        <!--<move file="${build.dir}/CeylonIDEA/lib/org.intellij.plugins.ceylon.ide.ceylonCode-1.2.0.car"-->
              <!--tofile="${build.dir}/CeylonIDEA/lib/org.intellij.plugins.ceylon.ide.ceylonCode-1.2.0.jar"/>-->

        <zip destfile="${basedir}/out/installation-packages/CeylonIDEA.zip"
             basedir="${build.dir}" includes="CeylonIDEA/**"/>
    </target>

    <target name="build"
            description="Builds the IDE plugin">
        <ant antfile="${basedir}/plugin-ceylon-code/build.xml"
             target="build"
             dir="${basedir}/plugin-ceylon-code"
             inheritall="false">
        </ant>
        <antcall target="build-runtime"/>
        <antcall target="build-ide"/>
    </target>

    <target name="clean"
            description="Cleans the build environment">
        <ant antfile="${basedir}/plugin-ceylon-code/build.xml"
             target="clean"
             dir="${basedir}/plugin-ceylon-code"
             inheritall="false">
        </ant>
        <delete dir="${build.dir}"/>
    </target>
</project>
